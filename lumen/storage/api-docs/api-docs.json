    "paths": {
        "/adcampaigns/{name}/{page_number}": {
            "get": {
                "tags": [
                    "AdCampaigns"
                ],
                "description": "AdCampaigns list",
                "operationId": "App\\Http\\Controllers\\AdcampaignsController::getAdcampaigns",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "AdCampaign name",
                        "required": false,
                        "allowEmptyValue": true,
                        "example": "Xmas"
                    },
                    {
                        "name": "page_number",
                        "in": "path",
                        "description": "Page number",
                        "required": false,
                        "allowEmptyValue": true,
                        "example": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "AdCampaigns list"
                    }
                }
            }
        },
        "/adcampaigns/{name}/{cash_back_rate}/{date_from}/{date_to}": {
            "post": {
                "tags": [
                    "AdCampaigns"
                ],
                "description": "New AdCampaign",
                "operationId": "App\\Http\\Controllers\\AdcampaignsController::create",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "AdCampaign name",
                        "required": true,
                        "example": "Xmas in July"
                    },
                    {
                        "name": "cash_back_rate",
                        "in": "path",
                        "description": "AdCampaign cash_back_rate (in %)",
                        "required": true,
                        "example": "5.5"
                    },
                    {
                        "name": "date_from",
                        "in": "path",
                        "description": "AdCampaign Start date",
                        "required": true,
                        "example": "2020-07-01 15:00:00"
                    },
                    {
                        "name": "date_to",
                        "in": "path",
                        "description": "AdCampaign End date",
                        "required": true,
                        "example": "2020-07-03 15:00:00"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "New AdCampaign addedd"
                    },
                    "412": {
                        "description": "Precondition Failed"
                    }
                }
            }
        },
        "/adcampaigns/{id}/{new_name}/{new_cash_back_rate}/{new_date_from}/{new_date_to}": {
            "patch": {
                "tags": [
                    "AdCampaigns"
                ],
                "description": "Update AdCampaign",
                "operationId": "App\\Http\\Controllers\\AdcampaignsController::update",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "AdCampaign ID",
                        "required": true,
                        "example": "1"
                    },
                    {
                        "name": "new_name",
                        "in": "path",
                        "description": "AdCampaign new name",
                        "required": false,
                        "example": "Xmas in December"
                    },
                    {
                        "name": "new_cash_back_rate",
                        "in": "path",
                        "description": "Adcampaign new cash_back_rate",
                        "required": false,
                        "example": "10.2"
                    },
                    {
                        "name": "new_date_from",
                        "in": "path",
                        "description": "Adcampaign new date_from",
                        "required": false,
                        "example": "2020-02-02"
                    },
                    {
                        "name": "new_date_to",
                        "in": "path",
                        "description": "Adcampaign new date_to",
                        "required": false,
                        "example": "2020-02-20"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Adcampaign updated"
                    },
                    "412": {
                        "description": "Precondition Failed"
                    }
                }
            }
        },
        "/adcampaigns/{id}": {
            "delete": {
                "tags": [
                    "AdCampaigns"
                ],
                "description": "Delete Adcampaign",
                "operationId": "App\\Http\\Controllers\\AdcampaignsController::delete",
